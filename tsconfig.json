{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
  },
  "compileOnsave": true,
  "include": ["src/**/*"],
  "exclude":["**/*.specs.ts"]
}
